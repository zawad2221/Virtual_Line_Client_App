<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".place_line.PlaceLineActivity">
    <TextView
        android:id="@+id/lineStatusTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Customers checked in line"
        android:textSize="33dp"
        android:layout_margin="@dimen/get_location_activity_component_margin"
        />
    <androidx.recyclerview.widget.RecyclerView
        android:layout_margin="@dimen/get_location_activity_component_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:id="@+id/store_line_recyclerView"

        >

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>